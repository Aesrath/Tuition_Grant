@*
	This view should be tied to a model class
	@model <which model class?>
*@
@model PHUser

@{
	// Coding here should prepare the list of roles to be used as drop down list items
	List<dynamic> LstRole = ViewData["Roles"] as List<dynamic>;
	LstRole.Insert(0, new { value = "", text = "-- SELECT --" });


}


<form class="form-horizontal" asp-action="CreateUser">
	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="Email">Email : </label>
		<div class="col-sm-5">
			<input asp-for="Email" class="form-control" />
		</div>
		<div class="has-error">
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="Name">Name : </label>
		<div class="col-sm-5">
			<input asp-for="Name" class="form-control" />
		</div>
		<div class="has-error">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="Role">Role : </label>
		<div class="col-sm-4">
			<select class="form-control col-sm-4" asp-for="Role">
				@foreach (var item in LstRole)
				{
					<option value="@item.value">@item.text</option>
				}
			</select>
		</div>
		<div class="has-error">
			<span asp-validation-for="Role" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="Password">Password : </label>
		<div class="col-sm-5">
			<input asp-for="Password" class="form-control" />
		</div>
		<div class="has-error">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="ConfirmPassword">Confirm Password: </label>
		<div class="col-sm-5">
			<input asp-for="ConfirmPassword" class="form-control" />
		</div>
		<div class="has-error">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-6">
			<input type="submit" class="btn btn-primary" value="Submit" />
		</div>
	</div>

</form>