@model ShirtOrder

@{ 
    var pokes = ViewData["pokes"] as List<dynamic>;
    pokes.Insert(0, new { value = "0", text = "-- SELECT --" });
}
<div class="form-group">
    <label asp-for="Name" class="col-sm-4 control-label"></label>
    <div class="col-sm-6">
        <input asp-for="Name" class="form-control" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Color" class="col-sm-4 control-label"></label>
    <div class="col-sm-8">
        <input type="radio" id="rdColor1" asp-for="Color" value="white" checked="checked" /> White
        <input type="radio" id="rdColor2" asp-for="Color" value="crimson" /> Crimson
        <input type="radio" id="rdColor3" asp-for="Color" value="khaki" /> Khaki
        <input type="radio" id="rdColor4" asp-for="Color" value="linen" /> Linen
    </div>
</div>
<div class="form-group">
    <label asp-for="Price" class="col-sm-4 control-label"></label>
    <div class="col-sm-6">
        <input id="txtPrice" asp-for="Price" class="form-control" />
    </div>
</div>
<div class="form-group">
    <label asp-for="PokedexId" class="col-sm-4 control-label">Pokedex</label>
    <div class="col-sm-6">
        <select id="ddlPoke" class="form-control col-sm-6" asp-for="PokedexId">
            @foreach (var item in pokes)
            {
                <option value="@item.value">@item.text</option>
            }
        </select>
    </div>
</div>
<div class="form-group">
    <label asp-for="FrontPosition" class="col-sm-4 control-label">Logo Position (Front)</label>
    <div class="col-sm-7">
        <input id="rdPosLeft" type="radio" asp-for="FrontPosition" value="0" checked="checked" /> Left
        <input id="rdPosRight" type="radio" asp-for="FrontPosition" value="1" /> Right
    </div>
</div>
<div class="form-group">
    <label asp-for="Qty" class="col-sm-4 control-label"></label>
    <div class="col-sm-6">
        <input id="txtQty" asp-for="Qty" class="form-control" />
    </div>
</div>
