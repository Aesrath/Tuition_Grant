@model Dish
@{
    Layout = ViewData["Layout"] as string;
    string msg = ViewData["Message"] as string;
}

<form class="form-horizontal" asp-action="@ViewData["PostTo"]">
	@if (ViewData["ButtonText"].ToString().Equals("Add") == false)
	{
		<div class="form-group">
			<label class="control-label col-sm-3" asp-for="Id">Id : </label>
			<div class="col-sm-4">
				<input asp-for="Id" class="form-control" readonly="readonly" />
			</div>
		</div>
	}

	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="Id">ID : </label>
		<div class="col-sm-4">
			<input asp-for="Id" class="form-control" />
		</div>
		<div class="has-error">
			<span asp-validation-for="Id" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="Name">Name : </label>
		<div class="col-sm-4">
			<input asp-for="Name" class="form-control" />
		</div>
		<div class="has-error">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="Price">Price : </label>
		<div class="col-sm-4">
			<input asp-for="Price" class="form-control" />
		</div>
		<div class="has-error">
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="Recommended">Recommended: </label>
		<div class="col-sm-4">
			<Input class="form-control" asp-for="Recommended">
		</div>
		<div class="has-error">
			<span asp-validation-for="Recommended" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="Availability">Number of Days (1-5) : </label>
		<div class="col-sm-3">
			<input asp-for="Availability" class="form-control" placeholder="D" />
		</div>
		<div class="has-error">
			<span asp-validation-for="Availability" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-3" asp-for="CuisineId">Number of Days (1-5) : </label>
		<div class="col-sm-3">
			<input asp-for="CuisineId" class="form-control" placeholder="D" />
		</div>
		<div class="has-error">
			<span asp-validation-for="CuisineId" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-6">
			<input type="submit" class="btn btn-primary" value="@ViewData["ButtonText"]" />
		</div>
	</div>
</form>

