@model List<dynamic>

@{
    ViewBag.Title = "Manage Dishes";
}

<h2>Manage Dishes</h2>
<span style="color:red">@TempData["Msg"]</span><br />
<a asp-action="AddDish">Create New Dish</a>
<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <th class="col-sm-1">Cuisine</th>
        <th class="col-sm-1">Name</th>
        <th class="col-sm-1">Price(SGD)</th>
        <th class="col-sm-1">Recommended</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.CuisineName</td>
            <td>@d.Name</td>
            <td>@String.Format("{0:0.00}",d.Price)</td>
            <td>@d.Recommended</td>
        </tr>
    }
</table>