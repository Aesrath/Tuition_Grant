@model MugOrder


@{
	var pokes = ViewData["pokes"] as List<dynamic>;
	pokes.Insert(0, new { value = "", text = "--SELECT--" });
}

<div class="form-group">
	<label asp-for="Color" class="col-sm-2 control-label"></label>
	<div class="col-sm-7">
		<input id="rdColor1" type="radio" asp-for="Color" value="white" checked="checked" /> White
		<input id="rdColor2" type="radio" asp-for="Color" value="silver" /> Silver
	</div>
</div>
<div class="form-group">
	<label asp-for="PokedexId" class="col-sm-2 control-label">Pokedex</label>
	<div class="col-sm-6">
		@{ // TODO P09 Task 2-2 Give the following drop down list (select tag) for pokedex an id called "ddlPoke"-->

		}
		<select id="ddlPoke" class="form-control col-sm-6" asp-for="PokedexId">
			@foreach (var item in pokes)
			{
				<option value="@item.value">@item.text</option>
			}
		</select>
	</div>
</div>
<div class="form-group">
	<label asp-for="Qty" class="col-sm-2 control-label"></label>
	<div class="col-sm-6">
		<input asp-for="Qty" class="form-control" />
	</div>
</div>
